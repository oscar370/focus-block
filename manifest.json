{
  "manifest_version": 3,
  "name": "Focus Block",
  "description": "Block sites by schedule or with Pomodoro to avoid distractions",
  "browser_specific_settings": {
    "gecko": {
      "id": "oscar.dga@outlook.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["activeTab", "storage", "alarms", "notifications"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/pages/content/index.tsx"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon-128.png", "icon-32.png", "src/pages/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
